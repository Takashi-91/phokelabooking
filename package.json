{
  "name": "guesthouse-backend-mongo-js",
  "version": "1.0.0",
  "description": "Express + MongoDB backend for guest house with FastPay payment integration",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"nodemon src/server.js\" \"tailwindcss -i ./public/css/style.css -o ./public/css/compiled.css --watch\" \"browser-sync start --proxy localhost:3000 --files 'public/**/*.html, public/**/*.css, public/**/*.js'\"",
    "dev-frontend": "browser-sync start --server public --files 'public/**/*.html, public/**/*.css, public/**/*.js'",
    "start": "node src/server.js",
    "lint": "eslint .",
    "build-css": "tailwindcss -i ./public/css/style.css -o ./public/css/compiled.css --watch",
    "build-css-prod": "tailwindcss -i ./public/css/style.css -o ./public/css/compiled.css --minify",
    "build": "npm run build-css-prod && echo 'Build complete!'"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.7",
    "paystack": "^2.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.7.0",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.17"
  }
}
